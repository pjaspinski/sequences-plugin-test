{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"target": "ES6",
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
