{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "esnext",
		"esModuleInterop": true,
		"target": "es5",
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
